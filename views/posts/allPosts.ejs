<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forum</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body,
      html {
        margin: 0;
        padding: 0;
        background-color: #212121;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        flex-wrap: wrap;
        min-height: 100vh;
        width: 100%;
        box-sizing: border-box;
        font-family: "Roboto", sans-serif;
        color: #ffffff;
      }

      .container {
        width: 90%;
        max-width: 1200px;
        padding: 2rem;
      }

      .header {
        text-align: center;
        margin-bottom: 2rem;
      }

      .header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #ff7675;
      }

      .posts {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .postDiv {
        background-color: #6c5ce7;
        padding: 2rem;
        margin: 1rem 0;
        width: 100%;
        box-sizing: border-box;
        color: #ffffff;
        border-radius: 10px;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s, box-shadow 0.2s;
        position: relative;
      }

      .postDiv:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
      }

      .postDiv::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background-color: #ff7675;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
      }

      .postDiv h2 {
        margin: 0 0 1rem 0;
        font-size: 1.5rem;
        font-weight: 700;
        text-align: center;
        text-transform: uppercase;
      }

      .postDiv p {
        margin: 0;
        font-size: 1rem;
        color: #d1d1d1;
        text-align: center;
        font-style: italic;
        font-weight: 400;
      }

      @media (max-width: 768px) {
        .postDiv {
          padding: 1.5rem;
        }

        .postDiv h2 {
          font-size: 1.25rem;
        }

        .postDiv p {
          font-size: 0.875rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>Forum Posts</h1>
      </div>
      <div class="posts"></div>
    </div>

    <script>
      const postsEL = document.querySelector(".posts");

      addEventListener("DOMContentLoaded", loadP);

      function loadP() {
        fetch("/posts/getAll", {
          method: "GET",
        })
          .then((res) => {
            if (!res.ok) {
              postsEL.textContent = "Something Went Wrong";
              return;
            }
            return res.json();
          })
          .then((data) => {
            postHandler(data);
          });
      }

      function postHandler(data) {
        for (let i = 0; i < data.length; i++) {
          let postHtml = `
          <div name="${data[i].postid}" class="postDiv">
            <h2>${data[i].title}</h2>
            <p>learn more</p>
          </div>
        `;
          postsEL.innerHTML += postHtml;
        }

        document.querySelectorAll(".postDiv").forEach((div) => {
          div.addEventListener("click", function () {
            window.location.href = `/posts/get/${this.getAttribute("name")}`;
          });
        });
      }
    </script>
  </body>
</html>
